alias reload='source ~/.bash_profile'

alias vi='vim'
alias svi='sudo vim'
alias gs='git status'
alias gd='git diff'
alias gc='git commit'
alias ga='git add'
alias gm='git merge --no-ff'

function gitdots(){
    
    cd ~
    
    if [ ! -d ~/.dotfiles ]; then
        git clone git@github.com:rnosworthy/.dotfiles.git    
    fi
    
    cd .dotfiles
    git pull
    
    cp .bash_profile ../
    cp .vimrc ../
    reload 
}

function sf(){
    find . -type f -exec grep -l $1 {} + ;
}

# Add to grep: color, line numbers
alias grep="grep --color -n "


